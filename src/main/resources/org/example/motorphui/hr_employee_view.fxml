<AnchorPane fx:id="root" minHeight="1024.0" minWidth="1141.0" prefHeight="1024" prefWidth="1141.0" stylesheets="@css/employee_view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.motorphui.HREmployeeView">

   <children>
      <Label fx:id="emp_info_label" layoutX="20.0" layoutY="35.0" text="Employee's Information">
         <font>
            <Font name="Poppins Bold" size="36.0" />
         </font>
      </Label>

      <TableView fx:id="emp_table" layoutY="119.0" prefHeight="754.0" prefWidth="784.0" AnchorPane.bottomAnchor="151.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="337.0" AnchorPane.topAnchor="119.0">
         <columns>
            <TableColumn id="emo" fx:id="empNumColumn" text="Employee #" />
            <TableColumn fx:id="lastNameColumn" prefWidth="130.0" text="Last Name" />
            <TableColumn fx:id="firstNameColumn" prefWidth="130.0" text="First Name" />
            <TableColumn fx:id="sssColumn" prefWidth="110.0" text="SSS #" />
            <TableColumn fx:id="philHealthColumn" prefWidth="110.0" text="PhilHealth #" />
            <TableColumn fx:id="tinColumn" prefWidth="110.0" text="TIN #" />
