            <Font name="Poppins Bold" size="16.0" />
         </font></Button>

      <Button fx:id="addemp_button" onAction="#handleAddEmployeeButton" layoutX="300.0" layoutY="894.0" prefHeight="36.0" prefWidth="255.0" text="Add Employee" AnchorPane.bottomAnchor="94.0" AnchorPane.leftAnchor="300.0">
         <font>
            <Font name="Poppins Bold" size="16.0" />
         </font></Button>

      <Button fx:id="deleteemp_button" onAction="#handleDeleteEmployeeButton" layoutX="580.0" layoutY="894.0" prefHeight="36.0" prefWidth="255.0" text="Delete Employee" AnchorPane.bottomAnchor="94.0" AnchorPane.leftAnchor="580.0">
         <font>
            <Font name="Poppins Bold" size="16.0" />
         </font></Button>
   </children>
</AnchorPane>