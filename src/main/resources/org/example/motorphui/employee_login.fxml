<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="1024.0" prefWidth="1440.0" stylesheets="@css/employee_login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.motorphui.EmployeeLogin">
   <children>
      <VBox fx:id="container" layoutX="397.0" layoutY="92.0" prefHeight="839.0" prefWidth="671.0" />
      <Label fx:id="welcomeback_label" layoutX="480.0" layoutY="166.0" text="Welcome Back!">
         <font>
            <Font name="Poppins Bold" size="64.0" />
         </font>
      </Label>
      <PasswordField fx:id="password_field" layoutX="550.0" layoutY="567.0" prefHeight="44.0" prefWidth="365.0">
         <font>
            <Font name="Poppins Regular" size="20.0" />
         </font>
      </PasswordField>
      <TextField fx:id="visible_password_field" layoutX="550.0" layoutY="567.0" managed="false" prefHeight="44.0" prefWidth="365.0" visible="false">
         <font>
            <Font name="Poppins Regular" size="20.0" />
         </font>
      </TextField>
      <Button fx:id="login_button" layoutX="550.0" layoutY="688.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="35.0" prefWidth="365.0" text="Login">
         <font>
            <Font name="Poppins Regular" size="15.0" />
         </font>
      </Button>
      <Label fx:id="trouble_label" layoutX="606.0" layoutY="796.0" text="Having trouble logging in?">
         <font>
            <Font name="Poppins Regular" size="18.0" />
         </font>
      </Label>
      <Label fx:id="contact_label" layoutX="587.0" layoutY="828.0" text="Contact: corporate@motorph">
         <font>
            <Font name="Poppins Regular" size="18.0" />
         </font>
      </Label>
      <CheckBox fx:id="show_password_check" layoutX="551.0" layoutY="626.0" mnemonicParsing="false" text="Show Password">
         <font>
            <Font name="Poppins Regular" size="14.0" />
         </font>
      </CheckBox>
      <TextField fx:id="username_field" layoutX="550.0" layoutY="468.0" prefHeight="44.0" prefWidth="365.0">
         <font>
            <Font name="Poppins Regular" size="18.0" />
         </font>
      </TextField>
      <Label fx:id="username_label" layoutX="554.0" layoutY="432.0" text="Username">
         <font>
            <Font name="Poppins Regular" size="20.0" />
         </font>
      </Label>
      <Label fx:id="password_label" layoutX="554.0" layoutY="532.0" text="Password">
         <font>
            <Font name="Poppins Regular" size="20.0" />
         </font>
      </Label>
      <Label fx:id="back_label" layoutX="716.0" layoutY="733.0" onMouseClicked="#handleBackClick" text="Back">
         <font>
            <Font name="Poppins Regular" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="employeeid_field" layoutX="550.0" layoutY="369.0" prefHeight="44.0" prefWidth="365.0">
         <font>
            <Font name="Poppins Regular" size="18.0" />
         </font>
      </TextField>
      <Label fx:id="employeeid_label" layoutX="554.0" layoutY="333.0" text="Employee ID">
         <font>
            <Font name="Poppins Regular" size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
